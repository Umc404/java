package day04;

/* - 학생 정보를 관리하기 위한 클래스
 * - 학생 기본정보 : 이름, 생년월일, 전화번호, 나이
 * - 학원정보 : 학원명="EZEN" (final static), 지점
 * - 수강정보 : 수강과목[], 기간[]
 * => 여러과목을 들을 수 있음.(여러과목을 수강하기 위해서는 배열로 처리. 5과목까지 가능)
 * 
 * ex) 홍길동(010101) 010-1111-1111 / 25 -> 학생정보
 * EZEN(인천) -> 학원정보
 * 자바 6개월, 파이썬 1개월, SQLD 1개월 -> 수강정보
 * 
 * 기능(메서드)
 * - 학생의 기본정보 출력기능
 * - 학원 정보를 출력하는 기능
 * - 학생이 수강정보를 추가하는 기능 : 배열에 추가기능
 */

public class Student {
	private String name, birthDate, telNum;
	int age;
	final private String ac = "EZEN";
	private String state;
	private String courseName, coursePer; // array 처리
	
	public Student() {};



	public Student(String name, String birthDate, String telNum, int age) {
		this.name=name;
		this.birthDate =birthDate;
		this.telNum = telNum;
		this.age = age;
	}
	public Student(String name, String birthDate, String telNum, int age, String state) {
		this(name, birthDate, telNum, age);
		this.state = state;
	}
	public Student(String state) {
		this.state = state;
	}
	public Student(String courseName, String coursePer) {
		this.courseName = courseName;
		this.coursePer = coursePer;
	}
	public void studentInfo() {
		System.out.println(name+"("+birthDate+") "+telNum+" / "+age);
	}
	public void stateInfo() {
		System.out.println(ac+"("+state+")");
	}
	public void courseInfo() {
		System.out.println(courseName + " " + coursePer);
	}

	// toString
	@Override
	public String toString() {
//		return "Student [name=" + name + ", birthDate=" + birthDate + ", telNum=" + telNum + ", age=" + age + ", ac="
//				+ ac + ", state=" + state + ", courseName=" + courseName + ", coursePer=" + coursePer + "]";
		return courseName + " " + coursePer;
	}

	// getter / setter
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getBirthDate() {
		return birthDate;
	}

	public void setBirthDate(String birthDate) {
		this.birthDate = birthDate;
	}

	public String getTelNum() {
		return telNum;
	}

	public void setTelNum(String telNum) {
		this.telNum = telNum;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}

	public String getState() {
		return state;
	}

	public void setState(String state) {
		this.state = state;
	}

	public String getCourseName() {
		return courseName;
	}

	public void setCourseName(String courseName) {
		this.courseName = courseName;
	}

	public String getCoursePer() {
		return coursePer;
	}

	public void setCoursePer(String coursePer) {
		this.coursePer = coursePer;
	}
	
	public String getCourse(String courseName, String coursePer) {
		return courseName + coursePer;
	}
	
	public void setCourse(String courseName, String coursePer) {
		this.courseName = courseName;
		this.coursePer = coursePer;
	}
	
	public String getAc() {
		return ac;
	}
	
}
