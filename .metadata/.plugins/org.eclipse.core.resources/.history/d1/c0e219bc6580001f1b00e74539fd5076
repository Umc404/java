package day05;

import java.util.Scanner;

public class ProductController {
	// product 배열 생성
	// 추가, 삭제, 수정, 리스트 보기
	
	private Product[] menu = new Product[10];
	private int cnt = 0; // index
	
	private String name;
	private int price;
	
	public void printProduct() {
		// TODO Auto-generated method stub
		for(int i=0; i<menu.length; i++) {
			if(menu.length == 0) {
				System.out.println("등록된 상품이 없습니다.");
				return;
			}
			else if(menu[i] != null) {
				System.out.println(menu[i]);
			}
		}
	}
	public void insertProduct(Scanner sc) {
		name = sc.next();
		price = sc.nextInt();
		
		Product pro = new Product();
		pro.insertProduct(cnt+1, name, price);
		menu[cnt] = pro;
		cnt++;
	}
	public void deleteProduct(Scanner sc) {
		name = sc.next();
		
		for(int i=0; i<menu.length; i++) {
			if(menu[i].getName().equals(name)) {
				menu[i] = menu[i+1];
				menu[i].setCnt(cnt-1);
			}
		}
		
	}
	public void modifyProduct(Scanner sc) {
		name = sc.next();
		
		for(int i=0; i<menu.length; i++) {
			if(menu[i].getName().equals(name)) {
				System.out.println("수정할 가격을 작성하세요");
				price = sc.nextInt();
				menu[i].setPrice(price);
			}
		}
	}
	
	public Product[] getMenu() {
		return menu;
	}
	public void setMenu(Product[] menu) {
		this.menu = menu;
	}
	public int getCnt() {
		return cnt;
	}
	public void setCnt(int cnt) {
		this.cnt = cnt;
	}
	
	
	
}
