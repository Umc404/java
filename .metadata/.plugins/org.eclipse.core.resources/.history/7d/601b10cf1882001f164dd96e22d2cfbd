	public void passLottoNum(Scanner scan) { // 수동
		System.out.println("6자리 숫자를 입력하세요");
		for(int i=0; i<tryNum.length; i++) {
//			tryNum[i] = scan.nextInt();
//			System.out.print(tryNum[i]+ " ");
			Lotto numbers = new Lotto();		
			numbers.insertNum(scan.nextInt());
		}
		
		tryArr[tryCnt] = numbers;
		tryCnt++;
		System.out.println(numbers);
	}

