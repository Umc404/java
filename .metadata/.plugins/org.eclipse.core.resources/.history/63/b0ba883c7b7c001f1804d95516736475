package day03;

public class Class03 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Tv t = new Tv();
	}

}
class Tv {
	private String brand;
	private boolean power, mute;
	private int ch, vol;
	
	// 생성자
	public Tv() {};
	public Tv(String brand) {
		this.brand = brand;
	}
	public Tv(String brand, boolean power) {
		this.brand = brand;
		this.power = power;
	}
	public Tv(String brand, boolean power, int ch) {
		this(brand, power);
		this.ch = ch;
	}
	public Tv(String brand, boolean power, int ch, int vol) {
		this(brand, power,ch);
		this.vol = vol;
	}
	public Tv(String brand, boolean power, int ch, int vol, boolean mute) {
		this(brand, power,ch,vol);
		this.mute = mute;
	}
	
	// 메서드
	public int chUp() {
		if(ch > 20) {
			ch = 0;
		}
		else {
			ch++;
		}
		return ch;
	}
	public int chDown() {
		if(ch < 0 ) {
			ch = 20;
		}
		else {
			ch--;
		}
		return ch;
	}
	public int volUp() {
		if(vol > 10) {
			vol = 10;
		}
		else {
			vol++;
		}
		return vol;
	}
	public int volDown() {
		if(vol < 0) {
			vol = 0;
		}
		else {
			vol--;
		}
		return vol;
	}
	public void setMute() {
		int lastVol = 0;
		if(!mute) {
			lastVol = vol;
			vol = 0;
			System.out.println("뮤트 On. 현재 볼륨 : " + vol);
		}
		else {
			vol = lastVol;
			System.out.println("뮤트 Off. 현재 볼륨 : " + vol);
		}
	}
	
	// getter / setter
	public String getBrand() {
		return brand;
	}

	public void setBrand(String brand) {
		this.brand = brand;
	}

	public boolean isPower() {
		return power;
	}

	public void setPower(boolean power) {
		this.power = power;
	}

	public int getCh() {
		return ch;
	}

	public void setCh(int ch) {
		this.ch = ch;
	}
	public int getVol() {
		return vol;
	}

	public void setVol(boolean mute) {
		this.vol = vol;
	}
	public int getMute() {
		return vol;
	}
	public void setMute(boolean mute) {
		this.vol = vol;
	}
	
}
// tv 클래스 생성
/* 멤버변수 : brand, power, ch, vol
 * 브랜드(삼성, LG), 전원, 채널, 소리볼륨
 * 메서드 :
 * power()
 * chUp() / chDown() : 1씩 증가 20까지 있음. 넘어가면 다시 0번으로 돌아가는 순환구조.
 * volUp() volDown() : 1씩 증가 1씩 감소 10까지 있음. 넘으면 그대로 10. 0이면 '음소거' 출력
 * mute()
 * 
 * */


