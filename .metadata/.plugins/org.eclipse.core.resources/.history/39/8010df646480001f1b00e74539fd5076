	public void printProduct() {
		// TODO Auto-generated method stub
		for(int i=0; i<menu.length; i++) {
			if(menu.length == 0) {
				System.out.println("등록된 상품이 없습니다.");
				return;
			}
			if(menu[i] != null) {
				System.out.println(menu[i]);
				
			}
		}
	}
